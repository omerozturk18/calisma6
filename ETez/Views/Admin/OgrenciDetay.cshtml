                        </div>
                        <div class="col-md-6">
                            <p>@Model.BaslangicTarihi</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Bitiş Tarihi</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.BitisTarihi</p>
                        </div>
                    </div>*@
                    <div class="row">
                        <div class="col-md-6">
                            <label>TC Kimlik No</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.TCKimlikNo</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <label>Şifre</label>
                        </div>
                        <div class="col-md-6">
                            <p>@Model.Sifre</p>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
@model IEnumerable<ETez.Models.Ogretmen>

@{
    ViewBag.Title = "Ogretmenler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Ogretmenler</h2>

<div class="col-lg-12 mt-5">
    <div class="row">
        <div class="col-md-3">
            <a href="/Admin/OgretmenEkle" class="btn btn-block btn-success">Öğretmen Ekle</a>
        </div>
    </div>
    <br />

    <div class="card">
        <div class="card-body">
            <h4 class="fc-header-title">Öğretmenler</h4>

            <div class="table-responsive" >
                <table class="table text-center"  style="background-color:white;" >
                    <thead class="text-uppercase bg-primary"  style="background-color:blueviolet;" >
                        <tr class="text-white">

                            <th scope="col">Adi</th>
                            <th scope="col">TC Kimlik No</th>
                            <th scope="col">Telefon</th>
                            <th scope="col">Şifre</th>
                            <th scope="col">Alanı</th>
                            <th scope="col">Düzenle</th>
                            <th scope="col">Sil</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                        <tr>
                            <td><a href="/Admin/OgretmenDetay/@item.Id">@Html.Raw(item.Adi + " " + item.Soyadi)</a></td>
                            <td>@item.TCKimlikNo</td>
                            <td>@item.TelefonNo</td>
                            <td>@item.Sifre</td>
                
                            <td><a href="/Admin/OgretmenDuzenle/@item.Id" class="btn btn-success">Düzenle</a></td>
                            <td>
                                @using (Html.BeginForm("OgretmenSil", "Admin", new { id = item.Id }, FormMethod.Post)) {

                                    <button type="submit" class="btn btn-danger">Sil</button>
                                }
                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>

        </div>
    </div>
</div>
@model IEnumerable<ETez.Models.Ogrenci>
@{
    ViewBag.Title = "OnaylananOgrenciler";
    Layout = "~/Views/Shared/_OgretmenLayout.cshtml";
}

<h2>Onaylanan Öğrenciler</h2>

<div class="col-lg-12 mt-5">
    <br />
    <div class="card">
        <div class="card-body">
            <h4 class="fc-header-title">Öğrenciler</h4>
            <br />
            <div class="table-responsive">
                <table class="table text-center">
                    <thead class="text-uppercase bg-primary">
                        <tr class="text-white">
                            <th scope="col">Adı</th>
                            <th scope="col">Okul No</th>
                            <th scope="col">Staj Yeri</th>
                            <th scope="col">Başlangıç Tarihi</th>
                            <th scope="col">Bitiş Tarihi</th>
                            <th scope="col">Onay</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) {
                            
                            <tr>
                                <td>@Html.Raw(item.Adi + " " + item.Soyadi)</td>
                                <td>@item.OkulNo</td>
                                <td>@item.TezAdi</td>
                                <td>@item.TezKonusu</td>
                                <td>@item.BitisTarihi</td>
                                <td>@item.Onay</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@{
    ViewBag.Title = "Ogrenci";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}


@using (Html.BeginForm("OgrenciGiris", "Giris", FormMethod.Post)) {
    @Html.ValidationSummary(true)

    <div class="form-group">
        <label for="username" class="cols-sm-2 control-label">Kullanıcı Adı</label>
        <div class="cols-sm-10">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-users fa" aria-hidden="true"></i></span>
                <input type="text" class="form-control" name="tckNo" placeholder="Kullanıcı Adınızı Giriniz" />
                @*@Html.TextBox("username", new { @placeholder = "Enter your Username", @class = "form-control username" })*@
            </div>
        </div>
    </div>
    <div class="form-group">
        <label for="password" class="cols-sm-2 control-label">Şifre</label>
        <div class="cols-sm-10">
            <div class="input-group">
                <span class="input-group-addon"><i class="fa fa-lock fa-lg" aria-hidden="true"></i></span>
                <input type="password" class="form-control" name="sifre" placeholder="Şifrenizi Giriniz" />
                @*@Html.TextBox("password", new { @placeholder = "Enter your Password", @type = "password", @class = "form-control password" })*@
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-lg btn-block login-button">Giriş</button><br class="cl" />

}